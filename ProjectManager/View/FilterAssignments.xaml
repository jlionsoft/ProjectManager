<ui:ContentDialog x:Class="ProjectManager.View.FilterAssignments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManager.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:vm="clr-namespace:ProjectManager.ViewModel"
             xmlns:ui="http://schemas.modernwpf.com/2019"
                  PrimaryButtonText="Anwenden"
                  DefaultButton="Primary">
    <Grid>
        <GroupBox Header="Sortieren nach">
            <ui:RadioButtons SelectionChanged="RadioButtons_SelectionChanged" Name="radioButtons">
                <RadioButton Content="Priorität" GroupName="filter" IsChecked="True"/>
                <RadioButton Content="Projekt" GroupName="filter"/>
            </ui:RadioButtons>
        </GroupBox>   
    </Grid>
</ui:ContentDialog>
